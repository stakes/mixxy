!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %title= content_for?(:title) ? yield(:title) : "Mixxy"
    %meta{:content => "", :name => "description"}
    %meta{:content => "", :name => "author"}
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application", "jquery.masonry.min", "icanhaz.min"
    = csrf_meta_tags
    
    = javascript_include_tag "http://use.typekit.com/odl4nyn.js"
    :javascript
        try{Typekit.load();}catch(e){}
    
    :javascript
        window.MIXXY = window.MIXXY || {};
    
    - if !current_user.blank?
      :javascript
        window.MIXXY.current_user = "#{current_user.id}"
    
    = yield(:head)
  %body
  
    #abovenav
      .container
        .left
          = link_to(image_tag('logo.png'), '/')
        .right
          - if user_signed_in?
            %li
              Logged in as #{link_to current_user.name, user_path(current_user)}
            %li
              = link_to('Logout', signout_path)
          - else
            = link_to('Sign up with Facebook', signin_path, :id => 'header-signin', :class => 'ir')
        .clearfix
        
  
    / %header.navbar.navbar-fixed-top
    /   %nav.navbar-inner
    /     .container
    /       = render 'layouts/navigation'
          
          
    - if params[:controller] == 'static'
      #form-container
        .container
          .row
            = form_tag('/search', :method => 'get', :id => 'big_search') do
              .span7.offset1
                = text_field_tag(:query, '', :placeholder => 'I want to listen to...')
              .span3 
                = submit_tag('Find playlists', :id => 'search_submit')
      

          
    #main{:role => "main"}
      .container
        .row
          .span12
            = render 'layouts/messages'
    
    = render :partial => '/playlists/playlist_widget'          
    = render :partial => '/playlists/playlist_tile'
    = render :partial => '/static/login_modal'
    
    #playlist-grid
      = yield

    #player


    #footer

